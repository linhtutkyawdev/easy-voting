    </div>
    <!-- admi nav end  -->

    <div class="container-xl">
      <h2>Campaign Update</h2>
      <div class="card" style="padding: 20px">
        <form
          action="/admin/campaign-update"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="row">
            <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
              <input type="text" value="<%= camp.id %>" name="id" hidden />
              <label class="form-label">Update Name</label>
              <input
                type="text"
                name="title"
                class="form-control"
                autocomplete="off"
                placeholder="Enter name"
                value="<%= camp.title %>"
              />
            </div>
            <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
              <div class="form-label">Update Image</div>
              <input
                type="file"
                name="image"
                class="form-control"
                accept="image/*"
              />
            </div>
          </div>
          <div class="row">
            <div class="mb-3 col-6">
              <label class="form-label" style="margin-left: 10px">
                Update End Date</label
              >
              <input
                type="datetime-local"
                class="form-control"
                name="endDate"
                placeholder="<%= camp.endDate %>"
              />
            </div>
            <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
              <label class="form-label">Campaign Type</label>
              <% if(camp.select == '1'){ %>
              <input
                type="text"
                class="form-control"
                readonly
                value="King & Queen selection"
              />
              <% }else{ %> <% if(camp.select == '2'){ %>
              <input
                type="text"
                class="form-control"
                readonly
                value="Project Competition"
              />
              <% }else{ %>
              <input type="text" class="form-control" readonly value="Other" />
              <% } %> <% } %>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label">Update Description</label>
            <% if(camp.description !== 'undefined') { %>
            <textarea
              name="desc"
              class="form-control"
              data-bs-toggle="autosize"
            >
<%= camp.description %></textarea
            >
            <% } %>
          </div>
          <div class="row">
            <div class="col-6">
              <a href="/admin/campaign-detail/<%= camp.id %>" class="btn"
                >Cancel</a
              >
            </div>
            <div class="col-6" style="text-align: end">
              <input type="submit" value="Update" class="btn btn-primary" />
            </div>
          </div>
        </form>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
      config = {
        enableTime: true,
        dateFormat: "d F Y h:i:s K",
      };
      flatpickr("input[type=datetime-local]", config);
    </script>
  </body>
